<% if controller.kind_of?(Admin::Base)%>
    <% @path = [:admin,:salons] %>
<% else %>
    <% @path = :salons%>
<% end %>
<%= form_tag @path, method: :get, class: "index" do %>
    <!--店舗名検索-->
    <%= text_field_tag "q",params[:q] %>
    <%= submit_tag "検索" %>
    <!--都道府県選択-->
    <%= select_tag :prefecture, options_for_select(Salon.prefecture,:selected=>@salon)%>
<% end %>