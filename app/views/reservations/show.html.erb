<h1>Reservations#show</h1>
<div class="toolbar"><%= link_to "予約一覧に戻る", :reservations %><br></div>
<table class ="attr">
    <tr>
        <th>担当スタイリスト</th>
        <td><%= Shift.find(@reservation.id).stylist.name%></td>
    </tr>
    <tr>
        <th>予約コース</th>
        <td><%= Course.find(@reservation.course_id).name %></td>
    </tr>
    <!--予約された時間のdatetime変数-->
    <% @date = @reservation.reserved_date.ago(9.hour)%>
    <tr>
        <th>予約日程</th>
        <td><%= @date.strftime("%m月%d日")%></td>
    </tr>
    <tr>
        <th>予約時間</th>
        <td>
            <%= @date.strftime("%H:%M 〜 ")%>
            <% @date = @date.since(30.minute*@reservation.reserved_time)%>
            <%= @date.strftime("%H:%M")%>
        </td>
    </tr>
    <tr>
        <th>合計金額</th>
        <td><%= @reservation.sum_price %>円</td>
    </tr>
</table>