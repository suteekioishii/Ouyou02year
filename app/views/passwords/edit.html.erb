<% @page_title = "パスワード変更"%>
<h1><%= @page_title %></h1>
<div class="toolbar"><%= link_to "マイページに戻る", current_customer %></div>

<%= form_for @customer, url: :password do |form| %>
<%= render "shared/errors", obj: @customer %>

<table class="attr">
    <tr>
        <th><%=form.label :current_password, "現在のパスワード"%></th>
        <td><%= form.password_field :current_password %></td>
    </tr>
    <tr>
        <th><%= form.label :password, "新しいパスワード"%></th>
        <td><%= form.password_field :password %></td>
    </tr>
    <tr>
        <th><%= form.label :password_confirmation, "新しいパスワードの確認" %></th>
        <td><%= form.password_field :password_confirmation %></td>
    </tr>
</table>

<div><%= form.submit "変更" %></div>
<% end %>
