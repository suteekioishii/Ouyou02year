<% @page_title = "美容院一覧"%>
<h1><%= @page_title %></h1>
<%= link_to "サロンの新規登録",[:new,:admin,:salon] %>
<%= render "shared/form_search" %>
<% if @salons.count != 0%>
    <table class ="attr">
        <tr>
            <th>店名</th>
            <th>スタイリスト在籍数</th>
        </tr>
        <% @salons&.each do |salon|%>
            <tr>
                <td><%= link_to salon.name, [:admin,salon] %></td>
                <td><%= salon.stylists.count%>人</td>
            </tr>
        <% end %>
    </table>
<% else %>
    <h4>検索結果は0です。</h4>
<% end %>