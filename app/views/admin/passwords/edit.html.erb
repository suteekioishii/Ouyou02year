<h1>Admin::Passwords#edit</h1>

<div class="toolbar"><%= link_to "マイページに戻る", [:admin, current_admin] %></div>

<%= form_for @admin, url: [:admin,:password] do |form| %>
<%= render "shared/errors", obj: @admin %>

<table class="attr">
    <tr>
        <th><%=form.label :current_password, "現在のパスワード"%></th>
        <td><%= form.password_field :current_password %></td>
    </tr>
    <tr>
        <th><%= form.label :password, "新しいパスワード"%></th>
        <td><%= form.password_field :password %></td>
    </tr>
    <tr>
        <th><%= form.label :password_confirmation, "新しいパスワードの確認" %></th>
        <td><%= form.password_field :password_confirmation %></td>
    </tr>
</table>

<div><%= form.submit "変更" %></div>
<% end %>

